table AddArrangement { }
table AddArrangementResponse {
  edit_pointer: ulong;
}

table DeleteArrangement {
  edit_pointer: ulong;
}

table AddProcessor {
  processor_uri: string;
}
table AddProcessorResponse {
  success: bool;
}

// Processor category enum
enum ProcessorCategory: short {
  Effect,
  Instrument,
  Unknown
}

table ProcessorDescription {
  id: string;
  name: string;
  category: ProcessorCategory;
}

table GetProcessors {}
table GetProcessorsResponse {
  processors: [ProcessorDescription];
}

// Maybe these should be moved out into another file
table LiveNoteOn {
  edit_pointer: ulong;

  // how on earth are we linking things
  channel: ubyte;
  note: ubyte;
  velocity: float; // JUCE apparently encodes this in float
}
table LiveNoteOff {
  edit_pointer: ulong;

  channel: ubyte;
  note: ubyte;
}
