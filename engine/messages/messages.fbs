include "project.fbs";

table Exit {}
table Heartbeat {}

union Command {
  // Application commands
  Heartbeat,
  Exit,

  // Project commands
  AddArrangement,
  AddGenerator,
  GetPlugins,
}

union ReturnValue {
  // Project commands
  GetPluginsResponse,
}

table Request {
  id: int;
  command: Command;
}

table Response {
  id: int;
  return_value: ReturnValue;
}
