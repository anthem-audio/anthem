include "project.fbs";

table Exit {}
table ExitReply {}

table Heartbeat {}
table HeartbeatReply {}

union Command {
  // Application commands
  Exit,
  Heartbeat,

  // Project commands
  AddArrangement,
  AddPlugin,
  DeleteArrangement,
  GetProcessors,

  // ??
  LiveNoteOn,
  LiveNoteOff,
}

union ReturnValue {
  // Application commands
  ExitReply,
  HeartbeatReply,

  // Project commands
  AddArrangementResponse,
  AddPluginResponse,
  GetProcessorsResponse,
}

table Request {
  id: int;
  command: Command;
}

table Response {
  id: int;
  return_value: ReturnValue;
}
