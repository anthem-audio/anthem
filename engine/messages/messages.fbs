include "project.fbs";
include "processing_graph.fbs";
include "processors.fbs";

table Exit {}
table ExitReply {}

table Heartbeat {}
table HeartbeatReply {}

union Command {
  // Application commands
  Exit,
  Heartbeat,

  // Project commands

  AddArrangement,
  DeleteArrangement,

  // Processing graph commands

  GetProcessors,
  GetProcessorPorts,

  GetMasterOutputNodeId,

  AddProcessor,
  RemoveProcessor,
  ConnectProcessors,
  DisconnectProcessors,

  CompileProcessingGraph,

  // Processor commands

  // ??
  LiveNoteOn,
  LiveNoteOff,

  SetParameter,
}

union ReturnValue {
  // Application commands

  ExitReply,
  HeartbeatReply,

  // Project commands

  AddArrangementResponse,

  // Processing graph commands

  GetProcessorsResponse,
  GetProcessorPortsResponse,

  GetMasterOutputNodeIdResponse,

  AddProcessorResponse,
  RemoveProcessorResponse,
  ConnectProcessorsResponse,
  DisconnectProcessorsResponse,

  CompileProcessingGraphResponse,

  // Processor commands

  SetParameterResponse,
}

table Request {
  id: int;
  command: Command;
}

table Response {
  id: int;
  return_value: ReturnValue;
}
